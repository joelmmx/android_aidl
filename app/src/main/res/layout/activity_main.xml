<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Servicio de reproduccion de musica" />

    <Button
        android:id="@+id/boton_arrancar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conectar servicio" />

    <Button
        android:id="@+id/boton_detener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desconectar servicio" />

    <Button
        android:id="@+id/boton_reproducir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reproducir" />

    <Button
        android:id="@+id/boton_avanzar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avanzar" />
</LinearLayout>